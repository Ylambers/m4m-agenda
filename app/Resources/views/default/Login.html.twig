{% extends 'base.html.twig' %}

{% block body %}
<div class="admin-container">
    <div class="login-form">
        <a href="/"> <div class="header-img"></div></a>

        <div class="login-body">
            <h2>Login</h2>

            <form action="{{ path('login_check') }}" method='post' class='form-validate' id="test">
                <div class="form-group">
                    <div class="email controls">
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class='form-control' placeholder="Gebruikersnaam" required="true"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="pw controls">
                        <input type="password" id="password" name="_password"  class='form-control' placeholder="Wachtwoord" required="true" />
                    </div>
                </div>

                <div class="error">
                    {% if error %}
                        {#<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>

                <div class="submit">
                    <input type="submit" value="Aanmelden" class='login_button'>
                </div>


            </form>
        </div>
    </div>
</div>
{% endblock %}